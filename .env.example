# ==============================================================================
# Network Configuration
# ==============================================================================
# Default network (sepolia or arbitrum-sepolia)
NEXT_PUBLIC_DEFAULT_NETWORK=sepolia

# Ethereum Sepolia RPC URL (optional, for fallback)
# NEXT_PUBLIC_RPC_URL_SEPOLIA=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Arbitrum Sepolia RPC URL (optional, for fallback)
# NEXT_PUBLIC_RPC_URL_ARBITRUM_SEPOLIA=https://sepolia-rollup.arbitrum.io/rpc

# ==============================================================================
# Token Configuration
# ==============================================================================
# PYUSD token address on Sepolia (6 decimals)
NEXT_PUBLIC_PYUSD_TOKEN_ADDRESS=0xCaC524BcA292aaade2DF8A05cC58F0a65B1B3bB9
NEXT_PUBLIC_PYUSD_DECIMALS=6

# MATE token address (18 decimals, protocol constant)
NEXT_PUBLIC_MATE_TOKEN_ADDRESS=0x0000000000000000000000000000000000000001
NEXT_PUBLIC_MATE_DECIMALS=18

# ==============================================================================
# Feature Flags (for gradual rollout)
# ==============================================================================
# Enable real wallet integration (set to 'false' to use mock wallet)
NEXT_PUBLIC_ENABLE_WALLET=false

# Enable real EVVM service calls (set to 'false' to use mock data)
NEXT_PUBLIC_ENABLE_EVVM_SERVICES=false

# Enable HyperSync integration (set to 'false' to use mock transactions)
NEXT_PUBLIC_ENABLE_HYPERSYNC=false

# ==============================================================================
# Analytics & Monitoring (Optional)
# ==============================================================================
# Vercel Analytics is already configured via @vercel/analytics package

# Optional: Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# ==============================================================================
# Development & Debugging
# ==============================================================================
# Enable debug logging
# NEXT_PUBLIC_DEBUG=true

# ==============================================================================
# Fisher Bot Configuration (Backend/Server-side ONLY)
# ==============================================================================
# WARNING: Never expose these in the frontend!
# Fisher bot private key for executing gasless transactions
FISHER_PRIVATE_KEY=

# Enable/disable Fisher bot
FISHER_ENABLED=true

# Gas price multiplier for faster execution (default: 1.2)
FISHER_GAS_PRICE_MULTIPLIER=1.2

# Polling interval in milliseconds (default: 5000 = 5 seconds)
FISHER_POLLING_INTERVAL=5000

# ==============================================================================
# Fishing Pool API (for gasless transaction submission)
# ==============================================================================
# API endpoint for fisher bot to poll for signed transactions
NEXT_PUBLIC_FISHING_POOL_API=http://localhost:3000/api/fishing

# ==============================================================================
# NOTES
# ==============================================================================
# - All NEXT_PUBLIC_ variables are exposed to the browser
# - Never commit .env.local to version control
# - See README.md for detailed setup instructions
# - Contract addresses match packages/nextjs deployment (Sepolia testnet)
# - FISHER_PRIVATE_KEY should NEVER be in NEXT_PUBLIC_ or frontend code!
# - HyperSync endpoint: https://sepolia.hypersync.xyz (NOT RPC endpoint)
