NEXT_PUBLIC_EVVM_CONTRACT_ETH=0x9486f6C9d28ECdd95aba5bfa6188Bbc104d89C3e
NEXT_PUBLIC_TREASURY_CONTRACT_ETH=0x3d6cb29a1f97a2cff7a48af96f7ed3a02f6aa38e
NEXT_PUBLIC_NAME_SERVICE_CONTRACT_ETH=0xa4ba4e9270bde8fbbf4328925959287a72ba0a55
